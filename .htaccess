# Enable Rewrite
RewriteEngine On



# Prevent redirect loops
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} !^www\.orlandothrivetherapy\.com$ [NC]
RewriteRule ^(.*)$ https://www.orlandothrivetherapy.com/$1 [L,R=301]

# Remove index.html in any folder
RewriteRule ^(.*/)?index\.html$ /$1 [R=301,L]




# ---------------------------
# Security Headers
# ---------------------------
#Force HTTPS
Header always set Content-Security-Policy "upgrade-insecure-requests"

# HSTS: Enforce HTTPS for 2 years, include subdomains, preload list
Header always set Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"

# Prevent clickjacking
Header always set X-Frame-Options "SAMEORIGIN"

# Prevent MIME-type sniffing
Header always set X-Content-Type-Options "nosniff"

# Basic XSS protection
Header always set X-XSS-Protection "1; mode=block"

# Control referrer data sent
Header always set Referrer-Policy "strict-origin-when-cross-origin"

